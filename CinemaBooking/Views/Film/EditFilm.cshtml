
@{
    ViewData["Title"] = "EditFilm";
    Layout = "~/Pages/Shared/_MyLayout.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@section Styles {
    <link href="~/css/createFilm.css" rel="stylesheet" />
}

@model CinemaBooking.ViewModels.Film.MovieEditViewModel;

<div class="container contact" style="overflow:hidden;height:auto">
    @{ 
        var photoPath = "../imgs/films/" + (@Model.PhotoPath ?? "default.jpg");
    }
    <div class="row">
        <div class="col-md-3" style=" background: rgba(255, 255, 255, 0.8); ">
            <div class="contact-info">
                <img src="@photoPath" width="120%" style="margin-right:20px;" />
            </div>
        </div>
        <div class="col-md-9">
            <form class="contact-form" style="color:black" asp-action="EditFilm" asp-controller="Film" enctype="multipart/form-data">
                <input type="hidden" asp-for="@Model.movieID" value="@Model.movieID">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="title" asp-for="@Model.Title">Tiêu đề</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="title" placeholder="Enter Title" asp-for="@Model.Title">
                    </div>
                    <span asp-validation-for="Title"></span>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="language" asp-for="@Model.Language">Ngôn Ngữ</label>
                    <div class="col-sm-10">
                        <select asp-for="@Model.Language" class="form-control" id="language">
                            <option value="Vietnamese">Tiếng Việt</option>
                            <option value="English">Tiếng Anh</option>
                            <option value="Korea">Tiếng Hàn</option>
                            <option value="Thailand">Tiếng Thái</option>
                            <option value="China">Tiếng Trung</option>

                        </select>
                    </div>
                    <span asp-validation-for="Language"></span>

                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="type" asp-for="@Model.Hour">Thể Loại</label>
                    <div class="col-sm-10">
                        <select asp-for="@Model.Type" class="form-control" id="type">
                            <option value="Action">Hành động</option>
                            <option value="Comedy">Hài hước</option>
                            <option value="Romantic">Lãng mạn</option>
                            <option value="Adventure">Phiêu lưu</option>
                        </select>
                    </div>
                    <span asp-validation-for="Type"></span>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="time" asp-for="@Model.Hour">Thời Lượng</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="time" placeholder="Enter Duration Time" asp-for="@Model.Hour">
                    </div>
                    <span asp-validation-for="Hour"></span>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" for="fromDate" asp-for="@Model.StartDate">Ngày Bắt Đầu Chiếu</label>
                    <div class="col-sm-10">
                        <input type="date" id="fromDate" asp-for="@Model.StartDate" class="form-control">
                    </div>
                    <span asp-validation-for="StartDate"></span>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" for="toDate" asp-for="@Model.EndDate">Ngày Dừng Chiếu</label>
                    <div class="col-sm-10">
                        <input type="date" id="toDate" asp-for="@Model.EndDate" class="form-control">
                    </div>
                    <span asp-validation-for="EndDate"></span>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="director" asp-for="@Model.Director">Đạo Diễn</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="director" placeholder="Enter Directors" asp-for="@Model.Director">
                    </div>
                    <span asp-validation-for="Director"></span>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="stars">Diễn Viên</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="2" id="stars" asp-for="@Model.Star" placeholder="Enter Directors"></textarea>
                    </div>
                    <span asp-validation-for="Star"></span>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="des">Mô Tả</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="3" id="des" asp-for="@Model.Description" placeholder="Enter Description"></textarea>
                    </div>
                    <span asp-validation-for="Description"></span>
                </div>

                <div asp-validation-summary="All" class="text-success"></div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default" style="background-color:#D6A21C; margin-top: 30px;">Cập nhật</button>
                    </div>
                </div>

                <img src="~/imgs/watching.png" width="40%" style="float:right" />

            </form>
        </div>
    </div>
</div>


